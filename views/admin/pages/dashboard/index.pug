extends ../../layouts/default.pug

block main
  .row
    .col-xxl-12
      .row
        // Total Orders Card with details
        .col-md-6
          .card.overflow-hidden
            .card-body
              .row
                .col-6
                  .avatar-md.bg-soft-primary.rounded
                    iconify-icon.avatar-title.fs-32.text-primary(icon="solar:cart-5-bold-duotone")
                .col-6.text-end
                  p.text-muted.mb-0.text-truncate Total Orders
                  h3.text-dark.mt-1.mb-0= stats.totalOrders || 0
                  small.text-muted
                    | Completed Orders: #{stats.completedOrders || 0}
                    br
                    | Pending Orders: #{stats.pendingOrders || 0}
            .card-footer.py-2.bg-light.bg-opacity-50
              .d-flex.align-items-center.justify-content-between
                div
                  span.text-success
                    i.bx.bxs-up-arrow.fs-12
                    |  2.3%
                  span.text-muted.ms-1.fs-12 Last Week
                a.text-reset.fw-semibold.fs-12(href="/admin/order/list") View More

        // Total Revenue Card with currency formatting
        .col-md-6
          .card.overflow-hidden
            .card-body
              .row
                .col-6
                  .avatar-md.bg-soft-success.rounded
                    iconify-icon.avatar-title.fs-32.text-success(icon="solar:banknotes-bold-duotone")
                .col-6.text-end
                  p.text-muted.mb-0.text-truncate Total Revenue
                  h3.text-dark.mt-1.mb-0 #{stats.revenue.toLocaleString('vi-VN')} VNƒê
                  small.text-muted
                    | Compared to last period: -1.2%
            .card-footer.py-2.bg-light.bg-opacity-50
              .d-flex.align-items-center.justify-content-between
                div
                  span.text-danger
                    i.bx.bxs-down-arrow.fs-12
                    |  -1.2%
                  span.text-muted.ms-1.fs-12 Last Week
