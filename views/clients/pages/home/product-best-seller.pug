section#product-sale
  .container
    h2.best-seller Sản phẩm bán chạy
    .prod-list__grid
      each item in bestSellerProducts
        section.prod-list__item
          .prod-list__item__image
            a(href=`/product/detail/${item.slug}`)
              img.prod-list__item__img1(src=item.thumbnail[0] loading="lazy" alt="")
            span.product-sale-tag
              span HOT!
            .button-heart-cart-hover
              a(href="#!")
                img.prod-list__item__image--heart-hover(src="/clients/icon/heart.svg" alt="" onclick="heart(this)")
              a(href="/clients/sanpham.html")
                img.prod-list__item__image--cart-hover(src="/clients/icon/cart.svg" alt="")
          .prod-list__item__inner
            .prod-list__item__inner--child
              .prod-list__item__info
                .prod-list__item__info--title
                  a(href=`/product/detail/${item.slug}`) #{item.title}
                .prod-list__item__info--masp Bán chạy
              .prod-list__item__info--price-fb
                .prod-list__item--price
                  span.prod-list__item__info--price #{item.priceNew}
                  span.prod-list__item__info--price-sales #{item.price}
                .prod-list__item__info--star-icon
                  img.info--star-icon(src="/clients/icon/star.svg" loading="lazy" alt="")
                  .prod-list__item__info--fb #{item.rating}
      
   
    // Button xem thêm
    a.btn.home-product(href="/products") Xem thêm
